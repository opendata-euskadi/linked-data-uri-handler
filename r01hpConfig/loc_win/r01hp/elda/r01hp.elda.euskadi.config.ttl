# ******************************
# SELECTORS
# ******************************
spec:describe-selector a api:Selector 
	;api:select """
			select distinct ?item where{
					?item ?p ?o .
					FILTER (?item = IRI(?uriITEM))	.
			}
			""" ;
	.

